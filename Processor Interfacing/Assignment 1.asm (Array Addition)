disp macro msg		; macro to display message
	lea dx, msg
	mov ah, 09h
	int 21h
endm

.model small

.data

        arrNos dw 0001h, 0002h, 0003h
	addMsg db 10, 13, "*****ARRAY ADDITION*****$"
	resultMsg db 10, 13, "Result of addition is $"

.code
start:

	mov ax, @data	; inititalize DS with
	mov ds, ax	; address of data segment
	
	disp addMsg
	disp resultMsg

	lea si, arrNos	; load address of array in SI
	
        mov ch, 04h     ; initialization
	mov cl, 02h
	mov bx, 0000h

	mov bx, [si]	; adds the array
	addLoop:
	inc si
        inc si
	add bx, [si]
	dec cl
	jnz addLoop

	displayLoop:	; displays the number
	rol bx, 04h
	push bx
	and bx, 000Fh
	cmp bx, 09h
	jbe isNum
	add bx, 37h
	jmp doNext
	isNum:	add bx, 30h
	doNext:	mov dx, bx
	mov ah, 02h
	int 21h
	pop bx
	dec ch
	jnz displayLoop

	mov ah, 4ch	; terminates the program
	int 21h

end start
